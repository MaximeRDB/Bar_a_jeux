<div class="card-product">
  <% src = game.image_link ? game.image_link : "https://cf.geekdo-images.com/BZiR636JJdSBwThtH42DVw__opengraph/img/_Iu_09Ab0fvnTJT3gBCfud0LbJg=/0x0:800x420/fit-in/1200x630/filters:strip_icc()/pic3744052.jpg"%>
  <img src=<%= src %>>
  <div class="card-product-infos">
    <h1><%= game.name %></h1>
    <p>
      <%= game.description %>
    </p>

    <% if bar&.user == current_user%>
      <%= link_to 'Edit', edit_game_path(game) %>
      <%= button_to('Destroy this game !?', game, :method => :delete) %>
    <%end%>

  </div>
</div>
